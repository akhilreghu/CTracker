<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#070707"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:onClick="contact"
            android:padding="8dp"
            app:srcCompat="@drawable/iconsetting" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="CTRACKER"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:onClick="info"
            android:padding="8dp"
            app:srcCompat="@drawable/iconinfo" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.99"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.99"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:fadingEdgeLength="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/imageViewbtc"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="btconclick"
                            app:srcCompat="@drawable/btc" />

                        <ImageView
                            android:id="@+id/imageVieweth"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="ethonclick"
                            app:srcCompat="@drawable/eth" />

                        <ImageView
                            android:id="@+id/imageViewtron"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="trononclick"
                            app:srcCompat="@drawable/tron" />

                        <ImageView
                            android:id="@+id/imageViewdash"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="dashonclick"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/dash" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/imageViewxmr"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="xrponclick"
                            app:srcCompat="@drawable/xrp" />

                        <ImageView
                            android:id="@+id/imageViewxrp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="xmronclick"
                            app:srcCompat="@drawable/xmr" />

                        <ImageView
                            android:id="@+id/imageViewltc"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="ltconclick"
                            android:scaleType="fitCenter"
                            android:scaleX="1.15"
                            android:scaleY="1.15"
                            app:srcCompat="@drawable/ltc" />

                        <ImageView
                            android:id="@+id/imageViewiota"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="fill|fill_horizontal"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:onClick="iotaonclick"
                            app:srcCompat="@drawable/iota" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFC9C9"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/sm" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="calculator"
                    app:cardBackgroundColor="#f7f7ff"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:foregroundGravity="clip_horizontal|center"
                        android:gravity="center"
                        android:onClick="calculator"
                        android:text="CONVERTER"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:onClick="blog"
                    app:cardBackgroundColor="#f7f7ff"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:foregroundGravity="clip_horizontal|center"
                        android:gravity="center"
                        android:onClick="blog"
                        android:text="INFORMATION"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_notification_overlay" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="LIVE"
                        android:textColor="#F44336"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="right"
                        android:text="TRENDING"
                        android:textColor="#F44336"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="6dp"
                        app:srcCompat="@drawable/btc" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="Bitcoin"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/btcrate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="right"
                        android:text="----------"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="6dp"
                        app:srcCompat="@drawable/eth" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="Ethereum"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ethrate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="right"
                        android:text="----------"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="6dp"
                        app:srcCompat="@drawable/tron" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="Tron"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tronrate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="right"
                        android:text="----------"
                        android:textColor="#F7F7FF"
                        android:textSize="30sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_notification_overlay" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="BLOG"
                    android:textColor="#F44336"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="right"
                    android:text="LATEST"
                    android:textColor="#F44336"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#f06543"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Cryptocurrency Market Update: Bitcoin bulls return, Coronavirus rampage unstoppable "
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Bitcoin bulls appeared to have found balance on Monday following a recovery move that pushed it towards $9,000. "
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#f06543"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="For more latest cryptocurrency news and information."
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Visit the blog section of the app."
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight=".01"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="home"
            android:padding="10dp"
            app:srcCompat="@drawable/iconhome" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="calculator"
            android:padding="10dp"
            app:srcCompat="@drawable/iconcalculator" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="blog"
            android:padding="10dp"
            app:srcCompat="@drawable/iconnews" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="account"
            android:padding="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/iconuser" />

    </LinearLayout>

</LinearLayout>